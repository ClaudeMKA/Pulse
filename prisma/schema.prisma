generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int      @id @default(autoincrement())
  username    String   @unique
  email       String   @unique
  password    String
  role        Role     @default(ADMIN)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("users")
}

model Artists {
  id          Int      @id @default(autoincrement())
  name        String
  desc        String?
  image_path  String?
  events      Events[]
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("artists")
}

model Events {
  id          Int      @id @default(autoincrement())
  title       String
  desc        String
  start_date  DateTime
  end_date    DateTime? // ← Nouveau champ pour la date de fin
  genre       Genre
  type        EventType
  location    String?
  latitude    Float?
  longitude   Float?
  image_path  String?
  artist_id   Int?
  artist      Artists? @relation(fields: [artist_id], references: [id])
  notifications EventNotifications[] // ← Ajouter cette relation
  created_at  DateTime @default(now()) // ← Ajouté
  updated_at  DateTime @updatedAt // ← Ajouté

  @@map("events")
}

model Stands {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  capacity    Int?     // Capacité du stand
  price       Float?   // Prix du stand
  type        StandType
  opened_at   DateTime
  closed_at   DateTime
  image_path  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("stands")
}

model EventNotifications {
  id          Int      @id @default(autoincrement())
  event_id    Int      // Événement concerné
  event       Events   @relation(fields: [event_id], references: [id], onDelete: Cascade)
  type        ReminderType // Type de rappel
  title       String   // "Rappel événement"
  message     String   // "Artiste1 joue dans 1h, Localisation1"
  sent_at     DateTime? // Quand la notification a été envoyée
  is_sent     Boolean  @default(false) // Si elle a été envoyée
  scheduled_for DateTime // Quand elle doit être envoyée
  created_at  DateTime @default(now())

  @@map("event_notifications")
}

enum StandType {
  FOOD
  ACTIVITE
  TATOOS
  SOUVENIRS
  MERCH
}

enum Genre {
  RAP
  RNB
  REGGAE
  ROCK
}

enum EventType {
  CONCERT
  ACCOUSTIQUE
  SHOWCASE
  OTHER
}

enum Role {
  USER
  ADMIN
}

enum ReminderType {
  ONE_HOUR_BEFORE
  TEN_MINUTES_BEFORE
}

